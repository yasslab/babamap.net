---
---

{% assign markers = site.data.takadanobaba | where_exp: "marker", "marker[':title'] != '404_Not_Found'" %}

[
  {% for marker in markers %}{% if marker[':id'] > 1030 %}{% continue %}{% endif %}
    {
      "id":    "{{ marker[':id'] }}",
      "src":   "{{ marker[':src'] }}",
      "lat":   "{{ marker[':lat'] }}",
      "lng":   "{{ marker[':lng'] }}",
      "link":  "{{ marker[':link'] }}",
      "date":  "{{ marker[':date'] }}",
      "image": "{{ site.url }}/images/takadanobaba/{{ marker[':id'] }}.jpg",
      "title": {{ marker[':title'] | jsonify }}
    }
    {% if marker[':id'] > 1000 %},{% else %}{% break %}{% endif %}
  {% endfor %}
]
